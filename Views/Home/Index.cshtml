
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" , intial-scale="1.0" />
    <title>Uve Cinema</title>
    <link href="~/CSS/index.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/javascript/script.js"></script>
</head>
<body>
    <header>
        <div class="jumbotron">
            <h1> <b>Uve</b> </h1>
        </div>

    </header>
    <nav>
        <!--Filters menu-->
        <button data-toggle="collapse" data-target="#filters" id="filtersButton">Filters</button>
        <!--Login form-->
        <button data-toggle="collapse" data-target="#login" id="loginButton">Login</button>
        <!--Register form-->
        <button data-toggle="collapse" data-target="#register" id="registerButton">Register</button>

        <div id="filters" class="collapse">
            <h4>Filter by Screening Type</h4>
            <div class="btn-group-toggle" data-toggle="buttons">
                <label id="3D" class="btn btn-outline-dark ">
                    <input type="checkbox" autocomplete="off"> 3D
                </label>
                <label id="2D" class="btn btn-outline-dark">
                    <input type="checkbox" autocomplete="off"> 2D
                </label>
                <label id="4K" class="btn btn-outline-dark ">
                    <input type="checkbox" autocomplete="off"> 4K
                </label>
                <label id="Audio Description" class="btn btn-outline-dark ">
                    <input type="checkbox" autocomplete="off"> Audio Description (AD)
                </label>
            </div>


            <h4>Filter by Genre</h4>
            <div class="btn-group-toggle" data-toggle="buttons">
                <label id="Comedy" class="btn btn-outline-dark ">
                    <input type="checkbox" autocomplete="off"> Comedy
                </label>
                <label id="Documentary" class="btn btn-outline-dark">
                    <input type="checkbox" autocomplete="off"> Documentary
                </label>
                <label id="Sci-Fi" class="btn btn-outline-dark ">
                    <input type="checkbox" autocomplete="off"> Sci-Fi
                </label>
                <label id="Thriller" class="btn btn-outline-dark ">
                    <input type="checkbox" autocomplete="off"> Thriller
                </label>
            </div>
        </div>

        <!--Login form-->
        <div id="login" class="collapse">
            <form action="/action_page.php">
                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" id="loginPassword" placeholder="Enter password">
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" id="loginShowPassword" type="checkbox"> Show Password
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox"> Remember me
                    </label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <!--Register form-->
        <div id="register" class="collapse">
            <form action="/action_page.php">
                <div class="form-group">
                    <label for="firstName">First Name:</label>
                    <input type="text" class="form-control" id="firstName" placeholder="Enter first name">
                </div>
                <div class="form-group">
                    <label for="surname">Surname:</label>
                    <input type="text" class="form-control" id="surname" placeholder="Enter surname">
                </div>
                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input type="email" class="form-control" id="email2" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="confirmEmail">Confirm Email address:</label>
                    <input type="email" class="form-control" id="confirmEmail" placeholder="Enter confirm email">
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" id="registerPassword" placeholder="Enter password">
                </div>
                <div class="form-group">
                    <label for="dateOfBirth">Date of birth:</label>
                    <input type="date" class="form-control" id="dateOfBirth" placeholder="Enter email">
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" id="registerShowPassword" type="checkbox"> Show Password
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox"> I agree to the non-existant terms of service
                    </label>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>


    </nav>
    <main>
        <div id="movieContent" class="container-fluid p-0">
            <div class="row no-gutters">


                <div id="movieBrowse" class="container-fluid col-sm-12 order-1 p-1">
                 @await Html.PartialAsync("_MovieBrowse")
                </div>

                <!--Movie information-->
                <div id="movieInfo" class="container-fluid col-sm-3 p-1">

                </div>
            </div>
        </div>
</main>
    <footer>

    </footer>

</body>
</html>
